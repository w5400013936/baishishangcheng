/* pages/detail/detail.wxss */
page{ background: #eee; font-size:32rpx; }
.header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  background: #fff;
  height: 100rpx;
  text-align: center;
  border-bottom:1rpx solid #E3E3E3;
}
.header view{
  display: inline-block;
  line-height: 96rpx;
  padding: 0 20rpx;
  font-size: 33rpx;
  color: #333333;
}
.header view.on{
border-bottom:9rpx solid #c9151e; 
color: #C9151E;
}
.container { display: block;}
.clear{ clear: both;}
swiper{height: 640rpx;}
.swiper{width: 100%; position: relative; border-bottom: 1rpx solid #ddd;}
swiper-item image{ width: 100%;}
.swiper-item{display: block;}
.detail-info {background: #fff; overflow: hidden; position: relative; }
.detail-info .name{padding:35rpx 29rpx; }
.detail-info .name text{ font-size:33rpx; color: #333;}
.price{padding:0 29rpx 0;margin-bottom:33rpx;  }
.detail-specification{ position: relative;border-bottom:solid 1px #ddd;border-top:solid 1px #ddd; padding-bottom: 25rpx; padding-left:120rpx; padding-right:0rpx;}
.detail-specification text{ position: absolute; font-size: 25rpx; left: 29rpx; top: 35rpx; color:#333;}
.detail-specification .specification-li{ display:inline-block;  padding: 10rpx 20rpx; margin:25rpx 10rpx 0; border:solid 1px #ddd; float: left;}
.detail-specification .specification-li.on{ border:solid 1px #f00; color: #f00; float:left;}
.specification-box{
  box-sizing: border-box;
  float: left;
  width: 126rpx;
  height: 126rpx;
  background-color: #ffffff;
	border: solid 1px #dddddd;
  padding: 7rpx;
  margin-top: 26rpx;
  margin-right: 31rpx;
  text-align: center;
}
.specification-box.on{
  border:solid 1px #f00;
}
.specification-box .specification-img{
  width: 112rpx;
  height: 112rpx;
}

.detail-package{
  padding: 25rpx 29rpx;
  margin-top: 25rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #dddddd;
}
.detail-package .package-img{
  width: 35rpx;
  height: 35rpx;
  vertical-align: top;
}

.qualitygoods{width:750rpx;height: 97rpx;display: block; }
.detail-Place{padding:25rpx 29rpx 25rpx 29rpx; overflow: hidden;margin-bottom:25rpx; background: #fff;}
.detail-Place image{width: 28rpx; height: 28rpx; padding:4rpx 10rpx 0 15rpx;}
.introduce{width:300rpx;height: 40rpx; margin: 0 auto 29rpx; display: block;}
.details-text{background: #fff; padding: 29rpx;}
.detail-ul{ padding: 22rpx 0;}
.detail-ul-li{ width: 50%; float: left; padding:20rpx 0 0 0;font-size: 25rpx;color: #666;}
.detail-statement {
  padding: 25rpx 22rpx 0;
  background: #fff;
  margin:0 0 25rpx 0; 
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;

}
.detail-statement text{
  font-size: 25rpx;
  color: #999;
  padding-left:10rpx; 
  padding-bottom:25rpx; 
  padding-right:25rpx; 
  float: left;
}
.detail-statement image{
  width: 22rpx;
  padding-bottom:25rpx; 
  height: 22rpx;
  float: left;
  margin-top:6rpx;
}
.tips{ font-size:21rpx; color: #999; padding: 40rpx 0 0 0;  }
.height10{ height:24rpx; background: #ececec; border-bottom:solid 1px #ddd; border-top: solid 1px #ddd;}
.title-name{ padding: 20rpx 0; line-height: 50rpx; text-align: center; position: relative;}
.title-name text{ display:inline-block; background: #fff; padding: 0 30rpx; position: relative; z-index: 3;}
.title-name::after{ content: ''; position: absolute; left:30rpx; right: 30rpx; height: 1px; background:#ddd; top: 50%; z-index: 1;}
.stone-vip-ul{ padding: 0 3% 30rpx 0;}
.stone-vip-li{ width: 47%; float: left; margin-left: 3%; margin-top: 20rpx;}
.stone-vip-li image{ width: 100%;}
.details-describe image{ width:100%;}
.footerH{ height:90rpx;}
.footer-fixed{ position: fixed; left: 0px; bottom: 0px; width: 100%; z-index: 9;background: #fff; }
.footer-fixed .message{width: 50%; text-align: center; background: #ff6261; color: #fff; float: left;  height: 105rpx; line-height: 105rpx; font-size:32rpx;}
.footer-fixed .tel{width: 40%; text-align: center; background: #fb0200; color: #fff; float: right; height: 105rpx; line-height: 105rpx;font-size: 32rpx;}
.footer-span3 .ico{width: 20px; height: 20px; overflow: visible;}
.footer-span3{ display: inline-block; width: 20%; text-align: center; padding: 10px 0 0 0;}
.footer-span3 text{ font-size:12px; color: #999; display: block;}
.current{ position: absolute; width: 70rpx; height: 70rpx; background: rgba(0,0,0,.6); border-radius: 50%; overflow: hidden; text-align: center;  bottom: 24rpx; right: 29rpx;  }
.current text{line-height: 65rpx; display: inline-block;}
.bgImg {border-bottom:1rpx solid #ddd;}
.bgImg image{
  width: 91rpx;height: 38rpx; 
}
.load-content{display: block;}
/* 评论 */
.comment{
  margin-top:29rpx; 
}
.commenthead{
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  padding: 0 29rpx;
  border-bottom:1rpx solid #ddd; 
}
.commentoperation{
display: flex;
justify-content: space-around;
margin: 25rpx 0;
text-align: center;
}
.commentoperation view{
  width: 158rpx;
  height: 63rpx;
  line-height: 63rpx;
  color: #333;
  font-size: 21rpx;
  background: #fff;
}
.commentoperation view.on{
color: #fff;
  background: #C9151E;
}
.commentinfo{

}
.commentinfo .box{
background: #fff;
border-top:1rpx solid #ddd;
border-bottom:1rpx solid #ddd;
  padding: 29rpx;
margin:29rpx 0;
}
.commentinfo .star image{
width: 186rpx;
height: 31rpx;
}
.commentinfo .content{
  padding: 31rpx 0 28rpx;
  line-height: 50rpx;
}
 
.commentinfo .img{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.commentinfo .img image{
  width: 163rpx;
  height: 163rpx;
  border-radius: 7rpx;
}
.morecomment{ padding: 20rpx 0 30rpx; text-align: center;color: #666;font-size: 24rpx;}
button[plain]{ border:0 }
.shares{
   width: 48rpx;
  height: 48rpx; 
  position: absolute;
  z-index: 2;
  right: 29rpx;
  top: 35rpx;
}
.sharesbutton{
  z-index: 3;
   width: 100rpx;
  height: 100rpx;
right: 0;top: 0;
}
.fixed_bg{
  background: #000;
  opacity: 0.4;
  position: fixed;
  left: 0;
  right: 0;
  top:0; 
  bottom: 0;
  z-index: 9;
}
 
.pop-download{
  text-align: center;
  background: #fff;
  border-radius:20rpx;
  padding:33rpx 0;
  position: fixed;
  left: 50%;
  margin-left:-300rpx; 
  top:50%; 
  margin-top:-300rpx;   
  z-index: 10;
  width:600rpx;
  height: 550rpx;
}
.pop-download .headimg{
  width:252rpx;
  height: 228rpx;
  margin-bottom:23rpx; 
}
.pop-download text{
display: block;
font-size: 29rpx;
color: #333;
text-align: center;
width: 100%;
padding: 10rpx 0 0;
}
.pop-download .h68{
height: 68rpx;
}
.pop-download .ok{
width: 494rpx;
height: 90rpx;
line-height: 90rpx;
color: #fff;
font-size: 41rpx;
margin: 0 auto; 
background: #F10215;
border-radius:2rpx;
}
.pop-download .close{
width: 35rpx;
height: 35rpx;
position: absolute;
right: 25rpx;
top: 25rpx;
}


.go-buy-bg{background: #000;opacity: 0.4;position: fixed; left: 0;right: 0; top:0;  bottom: 0;z-index: 9;}
.go-buy-info{ position: fixed; background: #fff; z-index: 10; left: 0px; bottom: 0px; right: 0px;}
.go-buy-product-info{ position:relative; margin: 0 10px; padding-left: 100px;}
.go-buy-info .thumb{ width: 80px; height: 80px; position: absolute;left: 0px; top: -20px; border-radius: 5px; overflow: hidden; border: solid 3px #fff;}
.go-buy-info .thumb image{ width: 80px}
.go-buy-info .name{ padding-top: 10px;}
.go-buy-info .name .Price{ color: #f00;}
.go-buy-info .name .title{ font-size: 12px; line-height: 30px;}
.go-buy-info .close{ width: 35rpx;height: 35rpx;position: absolute;right: 25rpx;top: 30rpx;}
.go-buy-info .close image{width: 35rpx;height: 35rpx;}
.go-buy-info .spec{ max-height: 420rpx;overflow: scroll;border-bottom: solid 1px #ddd; position: relative; padding-left: 120rpx; padding-top: 20px; padding-bottom:15px;}
.go-buy-info .spec text{ position: absolute; text-align: center; width: 100rpx; left: 0px; font-size: 14px; top:25px;} 
.go-buy-info .spec .spec-li{ border: solid 1px #ddd; padding: 5px 10px; border-radius: 5px; overflow: hidden; display: inline-block; margin-right: 10px; margin-top: 2px; margin-bottom: 2px; font-size: 13px;}
.go-buy-info .spec .spec-li.on{border:solid 1px #f00;color: #f00;}
.go-buy-info .spec .spec-box{
  box-sizing: border-box;
  float: left;
  width: 126rpx;
  height: 126rpx;
  background-color: #ffffff;
	border: solid 1px #dddddd;
  padding: 7rpx;
  margin-top: 13rpx;
  margin-bottom: 13rpx;
  margin-right: 31rpx;
  text-align: center;
}
.go-buy-info .spec .spec-box.on{
  border:solid 1px #f00;
}
.go-buy-info .spec .spec-box .spec-img{
  width: 112rpx;
  height: 112rpx;
}

.go-buy-info .num{ padding: 20px 10px;}
.go-buy-info .input-p{ width: 200rpx; border:solid 1px #ddd; border-radius: 5px; overflow: hidden; float: right; position: relative;line-height: 50rpx; height: 50rpx;}
.go-buy-info .input-btn{ width: 30%; text-align: center; position: absolute; top: 0px; bottom: 0px; line-height: 50rpx; height: 50rpx;}
.go-buy-info .input-add{ left: 0px;}
.go-buy-info .input-minus{ right: 0px;}
.go-buy-info .input-number{ width:40%; border-left: solid 1px #ddd; border-right: solid 1px #ddd; margin: 0 auto; text-align: center;line-height: 50rpx;}
.go-buy-info .tips{ text-align: right; font-size: 14px; color: #999;}
.go-buy-btn{ position: fixed; border-top: solid 1px #ddd; bottom: 0px; left: 0px; right: 0px; line-height: 50px; background: #fff;display: flex;justify-content: space-between;}
.h60{ height: 60px;}
.go-buy-btn .go-btn{ text-align: center; flex: 1; }
.go-buy-btn  .buy-btn{ flex: 1;background: #c9151e; color: #fff;}

.package-cell{
  box-sizing: border-box;
  /* height: 195rpx; */
  padding: 40rpx 10rpx 0 10rpx;
  white-space: nowrap;
  font-size: 45rpx;
}
.package-cell .package-img{
  width: 40rpx;
  height: 40rpx;
  margin: 0 8rpx 110rpx 8rpx;
}
.package-cell-box{
  display: inline-block;
  position: relative;
  /* vertical-align: middle; */
}
.package-cell-box .package-cell-num{
  position: absolute;
  right: 0;
  bottom: 48rpx;
  color: #F23030;
  font-size: 26rpx;
}
.package-cell-text{
  width: 160rpx;
  margin-top: 15rpx;
  font-size: 26rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
}
.package-cell .package-cell-img{
  width: 160rpx;
  height: 160rpx;
  vertical-align: middle;
  border: 1rpx solid #dddddd;
}
.spec .spec-package{
  box-sizing: border-box;
  width: 284rpx;
  height: 112rpx;
  border: solid 1px #ddd; 
  padding: 15px; 
  overflow: hidden; 
  display: inline-block; 
  margin-right: 10px; 
  margin-top: 2px; 
  margin-bottom: 2px; 
  font-size: 26rpx;
  text-align: center;
}
.spec .spec-package.on{
  border:solid 1px #f00;
  color: #f00;
}
.spec-package-content{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.home-btn{
  width: 70rpx;
  height: 70rpx;
  padding: 0;
  border: none;
  border-radius: 50%;
  background-color: transparent;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
}
.home-btn image{
  width: 72rpx;
  height: 72rpx;
}