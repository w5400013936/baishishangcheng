/* pages/classifylistinto/classifylistinto.wxss */
page{
background: #fff; 
}
.h25{
background: #ececec;
height: 116rpx;
width: 100%;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 5;
}
.munename{
box-sizing: border-box;  
float: left;
color: #5c6368;
font-size: 29rpx;
width:50%;
height:91rpx;
line-height: 91rpx;
border-bottom: 1rpx solid #ddd;
border-right: 1rpx solid #ddd;
background: #fff;  
position: relative;
z-index: 3;
text-align: center;
}
.munename .red{color: #f00;}
.munename image{
width:14rpx;
height: 15rpx;
position: absolute;
top: 51rpx;
right:32rpx; 
}
.munename:last-child{
border-right:none;
}


/* 列表 */
 .list-box{
position: relative;
padding: 0; 
} 
.product-list {
 padding: 0 28rpx;
padding-top:28rpx;   
}

/* 弹出层 */
.pop-type,.pop-color{
  position:fixed;
  top:91rpx; 
  left: 0;
  right: 0;
  background: #fff;  
  z-index: 7; 
}
.pop-type-height{
  max-height: 550rpx;
  overflow-y:auto;
}
.pop-type .bigclass{
padding:0 29rpx;
color: #333;
font-size: 33rpx;
border-bottom:1rpx solid #ddd;
height: 88rpx;
line-height: 88rpx; 
}
.pop-type .bigclass image{
  width: 35rpx;
  height: 35rpx;
  float: right;
  padding-top:30rpx; 
}
.pop-type .smallclass,.pop-color{
background: #fafafa;
border-bottom:1rpx solid #ddd;
padding-bottom:27rpx; 
overflow:hidden;
}
.pop-type .smallclass view,.colortext{
float: left;
color: #666;
font-size: 29rpx;
padding:27rpx 35rpx 0;

}
.pop-type .smallclass view.on,
.colortext.on{
color: #c9151e;
}
.pop-type .buttom view{
width: 50%;
box-sizing: border-box;
line-height: 97rpx;
font-size: 33rpx;
text-align: center;
float: left;
color: #333;
}
.pop-type .buttom view.bgred{
background: #C9151E;
color: #fff;
}
.fixed_bg{
  background: #000;
  opacity: 0.4;
  position: fixed;
  left: 0;
  right: 0;
  top:91rpx; 
  bottom: 0;
  z-index: 6;
}
 .bgImg{border: none} 





