  /**
   * 获取订单数量
   */
  getOrderNum() {
    var that = this
    var url = getApp().appData.host + "GetUserList"
    var parm = ""
    var token = getApp().appData.userInfo.token
    var mod = "statenum"
    wx.request({
      url: url, //仅为示例，并非真实的接口地址
      data: {
        "parm": parm,
        "mod": mod,
        "token": token
      },
      header: {
        'content-type': 'application/json', // 默认值
      },
      method: 'POST',
      success: function(res) {
        console.log("获取订单数量", res.data)
        //请求成功
        if (res.data.state == 1) {
          var list = res.data.data
          var orderNum01 = 0;
          var orderNum02 = 0;
          var orderNum03 = 0;
          for (var i = 0; i < list.length; i++) {
            var key = list[i].Key
            var value = list[i].Value
            if (key == 0) {
              orderNum01 = value
            } else if (key == 2) {
              orderNum02 = value
            } else if (key == 3) {
              orderNum03 = value
            }
          }
          that.setData({
            orderNum01: orderNum01,
            orderNum02: orderNum02,
            orderNum03: orderNum03,
          })
        } else { //请求失败      

        }
      },
      fail: function(res) {

      },
      complete: function() {

      }
    })
  },
