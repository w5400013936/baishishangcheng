<!--component/share/share.wxml-->
<block wx:if='{{show}}'>
  <view class='share-box {{hasTab?"b30":""}}'>
    <image wx:if='{{showHome}}' src='/images/home_red.png' bindtap='home'></image>
    <button open-type="share" class='share-btn mt30'>
       <image src='/images/share_red.png'></image> 
    </button>
  </view>
</block>