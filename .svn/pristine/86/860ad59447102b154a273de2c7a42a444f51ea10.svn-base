/* pages/invoice/invoice.wxss */
view{
  box-sizing: border-box;
}
.vam{
  vertical-align: middle;
}
.cell{
  background-color: #fff;
  font-size: 26rpx;
  margin-top: 28rpx;
}
.cell-title{
  height: 90rpx;
  padding: 0 26rpx;
  display: flex;
  align-items: center;
}
.cell-content{
  padding: 20rpx 26rpx;
  border-top: 1rpx solid #ddd;
}
.cell-btn{
  width: 143rpx;
  height: 68rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  text-align: center;
  line-height: 68rpx;
  display: inline-block;
  margin-right: 18rpx;
}
.cell-btn.select{
  border: 1rpx solid #f23030;
  color: #f23030;
}
.cell-li{
  height: 90rpx;
  display: flex;
  align-items: center;
}
.cell-li>input{
  width: 100%;
}
.cell-li-block{
  display: inline-block;
  margin-right: 50rpx;
}
.cell-li-img{
  width: 43rpx;
  height: 43rpx;
  vertical-align: middle;
  margin-right: 14rpx;
}

.invoice-type{
  width: 100%;
  height: 289rpx;
  background-color: #fff;
  padding: 20rpx 28rpx 21rpx;
}
.invoice-type-title{
  font-size: 29rpx;
  color: #333333;
}
.invoice-content{
  display: flex;
  justify-content: space-between; 
  flex-wrap: wrap;
}
.invoice-btn{
  width: 213rpx;
  height: 58rpx;
  font-size: 25rpx;
  color: #333333;
  border: 1rpx solid #999999;
  border-radius: 3rpx;
  text-align: center;
  line-height: 58rpx;
  margin-top: 23rpx;
}
.invoice-btn.small{
  width: 126rpx;
  margin-top: 0;
  margin-right: 27rpx;
}
.invoice-btn.select{
  border: 1rpx solid #f23030;
  color: #f23030;
}
.invoice-footer{
  margin-top: 23rpx;
  color: #999999;
  font-size: 21rpx;
}
.invoiceTitle-type{
  display: flex;
  align-items: center;
  margin-top: 23rpx;
}

.baseInfo{
  padding: 20rpx 29rpx;
}
.baseInfo-title{
  font-size: 29rpx;
  color: #333333;
}
.baseInfo-cell{
  width: 100%;
  height: 85rpx;
  background-color: #f0f2f5;
  border-radius: 7rpx;
  margin-top: 25rpx;
  padding-left: 21rpx;
}
.baseInfo-cell input{
  width: 100%;
  height: 100%;
}
.baseInfo-cell-ph{
  font-size: 25rpx;
  color: #f23030;
}
.panel{
  width: 100%;
  background-color: #fff;
  margin-top: 28rpx;
}
.customerInfo-cell{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #666666;
  padding: 0 29rpx;
  border-bottom: 1rpx solid #ddd;
}
.customerInfo-cell.customerInfo-title{
  font-size: 29rpx;
  color: #333333;
}
.customerInfo-cell-left{
  width: 135rpx;
}
.customerInfo-cell-right{
  margin-left: 27rpx;
  flex: 1;
}
.customerInfo-cell-right input{
  width: 100%;
}
.customerInfo-cell-ph{
  color: #999999;
}
.invoice-con{
  width: 100%;
  padding-bottom: 24rpx;
}
.invoice-con-title{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  padding: 0 29rpx;
}
.invoice-con-title-left{
  font-size: 29rpx;
  color: #333333;
}
.invoice-con-title-right{
  font-size: 21rpx;
  color: #999999;
  margin-left: 26rpx;
}
.invoice-main{
  padding: 10rpx 29rpx 0 29rpx;
}
.bottom-box{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  background-color: #c9151e;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.bottom-box-con{
  font-size: 33rpx;
  color: #fff;
}
.bottom-box-text{
  display: inline-block;
  vertical-align: top;
  line-height: 33.325rpx;
}