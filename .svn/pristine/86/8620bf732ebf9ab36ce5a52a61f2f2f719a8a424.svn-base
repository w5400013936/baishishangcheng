/**index.wxss**/


.header{
background: #c9151e;
padding: 18rpx 27rpx;
position: fixed;
top: 0;
left: 0;
right: 0;
z-index:99;
}
.searchbox{
border-radius: 7rpx; 
background: rgba(255, 255, 255, 0.2);
width: 100%;
height:63rpx;
}
.searchbox text{
line-height:63rpx;
color: #fff;
}
.search-img{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 8rpx 10rpx 0 0;
}
.h100{
height:62rpx;
width: 100%;
padding: 18rpx 0;
}
.list-box{
 width: 100%;
    padding-top:28rpx; 
  background: #fff;
  margin-top:25rpx; 
}
.list-box .box{
  padding: 0 28rpx;
}
.swiper-box {
  height:376rpx;
  width: 100%;
}
.swiper-box image {
  height: 372rpx;
  width: 100%;
}
.choose-box{
  height:160rpx;
 white-space: nowrap; 
  background: #fff;
 display: flex;
 width: 100%;
 justify-content: space-between;
 flex-wrap: wrap;
}
.choose-box .nav_top_items {
  display: inline-block;
  text-align: center;
  color: #999;
  font-size: 21rpx;
 margin:0 28rpx;
  
}
.choose-box image {
  height:83rpx;
  width:83rpx;
  display: block;
  margin: 20rpx auto 16rpx;
}
.tel{
  padding: 21rpx 0;
  border: 1rpx solid #ddd;
  background: #fff;
  border-left:none; 
  border-right:none; 
  width:100%;
}
.tel image{
width: 137rpx;
height: 34rpx;
border-right:1px solid #ddd; 
padding-right:27rpx;
margin: 5rpx 27rpx 0 28rpx;
float: left;
}
.tel .phone{
  font-size: 33rpx;
  color: #333;
  display: inline-block;
}

.list-box{
    border-top:1rpx solid #ddd; 
  border-bottom:1rpx solid #ddd; 
} 
.bgImg{border: none}
