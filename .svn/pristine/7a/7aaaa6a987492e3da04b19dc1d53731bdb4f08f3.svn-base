/* pages/my/my.wxss */

.header {
  background: #c9151e;
  padding: 18rpx 27rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99;
}

.searchbox {
  border-radius: 7rpx;
  background: rgba(255, 255, 255, 0.2);
  width: 100%;
  height: 63rpx;
}

.searchbox text {
  line-height: 63rpx;
  color: #fff;
}

.search-img{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 8rpx 10rpx 0 0;
}

.userOperation {
  background-color: #c9151e;
  width: 100%;
  height: 300rpx;
  color: #fff;
  margin-top: 50rpx;
  font-size: 31rpx;
  padding: 0 27rpx;
  justify-content: space-between;
}

.userLogin {
  display: flex;
  line-height: 300rpx;
  width: 100%;
  align-items: center;
}
.userHead{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.userInfo{
  margin-left: 35rpx;
}
.arrow{
  position: absolute;
  right: 27rpx;
}
.right-img{
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
}

.orderState {
  width: 100%;
  height: 150rpx;
  text-align: center;
  background-color: #fff;
  border-top: 1rpx solid #ddd;
}

.choose-box {
  height: 160rpx;
  white-space: nowrap;
  background: #fff;
  display: flex;
  width: 100%;
  justify-content: space-around;
  flex-wrap: wrap;
  border-top: 1rpx solid #ddd;
}

.choose-box .nav_top_items {
  display: inline-block;
  text-align: center;
  color: #999;
  font-size: 21rpx;
  margin: 0 28rpx;
}

.choose-box image {
  height: 50rpx;
  width: 50rpx;
  display: block;
  margin: 20rpx auto 16rpx;
  /* position: relative; */
  overflow: visible;
}

.badge{
  width: 30rpx;
  height: 30rpx;
  color: #fff;
  background-color: #F23030;
  border-radius: 50%;
  position: absolute;
  right: 0;
  top: 0;
  text-align: center;
  line-height: 30rpx;
}
