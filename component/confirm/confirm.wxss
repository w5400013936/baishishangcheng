/* component/confirm.wxss */
.confirm-box{
  width: 626rpx;
  height: 180rpx;
  position: fixed;
  top:0;
  bottom: 0;
  left:0;
  right: 0;
  margin: auto;
  background-color: #fff;
  padding-top: 40rpx;
  z-index: 1001;
  overflow: hidden;
}
.confirm-title{
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #333333;
}
.confirm-bottom{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 84rpx;
  color: #fff;
  font-size: 33rpx;
  text-align: center;
  line-height: 84rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #ddd;
}
.confirm-bottom button{
  flex:1;
  border-radius: none;
}
.confirm-submit{
  color: #1aad16;
}
.confirm-shadow{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 1000;
}