/* component/code/code.wxss */
.code-box{
  width: 600rpx;
  height: 380rpx;
  background-color: #fff;
  position: fixed;
  top:0;
  bottom: 0;
  left:0;
  right: 0;
  margin: auto;
  padding: 60rpx 80rpx;
  z-index: 1001;
  overflow: hidden;
}
.code-title{
  color: #000;
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.code-input{
  height: 50rpx;
  font-size: 24rpx;
  border: 1rpx solid #ddd;
  margin-bottom: 30rpx;
  padding: 10rpx;
}
.btn-box{
  display: flex;
  justify-content: space-between;
}
.cancel-btn,.submit-btn{
  width: 210rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  background-color: #c9151e;
}
.code-shadow{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 1000;
}