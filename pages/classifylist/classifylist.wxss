/* pages/classifylist/classifylist.wxss */
page{
background: #fff; 
overflow: hidden;
}
.flex{
display: flex;
justify-content: space-between;
}
.header{
background: #c9151e;
padding: 18rpx 27rpx;
position: fixed;
top: 0;
left: 0;
right: 0;
z-index:99;
}
.searchbox{
border-radius: 7rpx; 
background: rgba(255, 255, 255, 0.2);
width: 100%;
height:63rpx;
}
.searchbox text{
line-height:63rpx;
color: #fff;
}
.h100{
height:62rpx;
width: 100%;
padding: 18rpx 0;
}
.section_left{
border-right:1rpx solid #ddd;
width: 158rpx;
height:calc(100% - 96rpx);
float: left;
overflow-y:auto;
}
.big_class_name{
line-height: 104rpx;
font-size: 26rpx;
color: #000;
border-top:1rpx solid #ddd;
border-bottom:1rpx solid #ddd;
padding-left:27rpx; 
}
.small_class_name{
font-size: 26rpx;
color: #666;
line-height: 64rpx;
padding-left:27rpx;  
}
.small_class_name.on{
/* background: #eeeeee; */
color: #F10215;
}
.section_right{
padding: 45rpx 0;
float:right;
width: calc(100% - 160rpx);
text-align: center;
overflow-y:auto;
height:calc(100% - 185rpx);

}
.section_right .banner{
width: 525rpx;
height: 168rpx;
}
.section_right .title{
width: 272rpx;
height: 25rpx;
margin: 52rpx auto 41rpx;
}
.section_right .goods{ 
width: 493rpx;
margin: 0 auto;
overflow: hidden;
}
.section_right .goods .list {
overflow: hidden;
margin-right:-38rpx; 
/* display: flex;
justify-content: space-between;
flex-wrap: wrap; */
}
.section_right .goods .list .boxc{
margin:40rpx 38rpx 0rpx  0;
display: block;
float: left;
position: relative;

/* height: 260rpx; */
}
.section_right .boxc image{
width: 138rpx;
height: 138rpx; 
display: block;
}
.section_right .goods text{
margin: 26rpx 0 0rpx;
display: block;
font-size: 21rpx;
color: #666;
width:138rpx;
overflow: hidden;
text-overflow: ellipsis;
text-align: left;
white-space:nowrap;
}
.bigtitle{
  display: block;
margin:52rpx auto 0rpx;
}
.bigtitle text{
  font-size: 25rpx;
  color: #666;
background: #fff;
width: 188rpx;
position: relative;
z-index: 2;margin: 0 auto;
display: block;
}
.bigtitleborder{
  border-top:1rpx solid #ddd; 
  width: 272rpx;
  height: 2rpx;
  margin: 0 auto;
position: relative;  
  top:-15rpx;
}
.section_right  .bgImg{
width: 138rpx;
height: 138rpx;
}
.section_right  .bgImg image{
width: 50rpx;
height: 50rpx;
display: inline-block;
}


