/* pages/myOrder/myOrder.wxss */
.panel{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.panel-head{
  width: 100%;
  height: 68rpx;
  padding: 0 29rpx;
  font-size: 21rpx; 
  color: #333333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.panel-head-left{
  flex: 1;
}
.panel-img{
  width: 30rpx;
  height: 30rpx;
}
.orderNum{
   display: inline-block;
  vertical-align: top; 
  margin: 0 0 0 13rpx;
}
.orderStatus{
  color: #ff0000;
  margin: 0 17rpx 0 0;
  display: inline-block;
  vertical-align: top;
}
.panel-content{
  width: 100%;
  height: 196rpx;
  padding:25rpx 29rpx 24rpx 29rpx;
  box-sizing: border-box;
  position: relative;
}
.panel-content-img{
  width: 146rpx;
  height: 146rpx;
}
.panel-content-right{
  display: inline-block;
  margin-left: 20rpx;
  vertical-align: top;
  position: relative;
}
.panel-content-title{
  font-size: 33rpx;
  color: #000000;
  line-height: 33rpx; 
  text-overflow: ellipsis;
  width: 520rpx;
  white-space: nowrap;
  overflow: hidden;
}
.panel-content-subTitle{
  font-size: 21rpx;
  color: #999999;
  margin-top: 16rpx;
  /* margin-left: -4rpx; */
  line-height: 21rpx;
}
.panel-content-price{
  margin-top: 58rpx;
  font-size:25rpx;
  color: #f23030;
  line-height: 18rpx;
}
.panel-content-num{
  position: absolute;
  right: 55rpx;
  bottom: 18rpx;
  font-size:21rpx;
}
.panel-footer{
  width: 100%;
  height: 69rpx;
  border-top: 1rpx solid #ddd;
  line-height: 69rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.panel-footer-content{
  float: right;
  color: #676f73;
  font-size: 21rpx; 
}
.totalNum{
  display: inline-block;
  margin-right: 30rpx;
}
.totalPrice{
  display: inline-block;
}
.panel-bottom{
  width: 100%;
  height: 89rpx;
  border-top: 1rpx solid #ddd;
  box-sizing: border-box;
  padding: 13rpx 30rpx 13rpx 0;
}
.orderOperation{
  float: right;
  width: 152rpx;
  height: 53rpx;
  border: 1rpx solid #ff0000;
  font-size: 25rpx;
  color:#ff0000;
  text-align: center;
  line-height: 53rpx;
}
.orderRate{
  float: right;
  width: 112rpx;
  height: 43rpx;
  border: 1rpx solid #ff0000;
  font-size: 20rpx;
  color:#ff0000;
  text-align: center;
  line-height: 43rpx;
  margin-right: 15rpx;
}

.panel .panel-container{
  border-top: 1rpx solid #ddd;
}
.panel-sec .panel-con-title{
  width: 100%;
  height: 68rpx;
  padding: 0 29rpx;
  font-size: 23rpx; 
  color: #333333;
  box-sizing: border-box;
  line-height: 68rpx;
}
.panel-sec .panel-content-title{
  width: 465rpx;
}
.panel-sec .panel-content-img{
  margin-left: 55rpx;
}
.panel-sec .panel-con-footer{
  width: 100%;
  height: 68rpx;
  padding: 0 53rpx 0 29rpx;
  font-size: 23rpx; 
  color: #333333;
  box-sizing: border-box;
  line-height: 68rpx;
  text-align: right;
}