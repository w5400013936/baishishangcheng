/* pages/myAddresss/myAddress.wxss */
view{
  box-sizing: border-box;
}
.addList{
  width: 100%;
  background-color: #fff;
  margin-top: 25rpx;
}
.addList-header{
  width: 100%;
  height: 167rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.addList-content{
  width: 100%;
  position: relative;
}
.userInfo{
  font-size: 33rpx;
  color: #333333;
}
.address{
  font-size: 25rpx;
  color: #666666;
  margin-top: 20rpx;
}
.address image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.arrow{
  position: absolute;
  top: 30rpx;
  right: 0;
}
.arrow image{
  width: 30rpx;
  height: 30rpx;
}
.addList-footer{
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #ddd;
}
.default-add{
  font-size: 29rpx;
  color: #333333;
  display: inline-block;
}
.default-add image{
  width: 43rpx;
  height: 43rpx;
  margin-right:22rpx;
}
.text-justify{
  display: inline-block;
  vertical-align: top;
}
.add-delete{
  float: right;
  font-size: 29rpx;
  color: #676f73;
}
.add-delete image{
  width: 29rpx;
  height: 29rpx;
  margin-left: 11rpx;
  margin-top: 6rpx;
}
.bottom-box{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 97rpx;
  background-color: #c9151e;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.bottom-box-con{
  font-size: 33rpx;
  color: #fff;
}
.bottom-box-con image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 45rpx;
}
.bottom-box-text{
  display: inline-block;
  vertical-align: top;
  line-height: 33.325rpx;
}