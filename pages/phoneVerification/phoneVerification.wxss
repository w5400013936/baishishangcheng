/* pages/phoneVerification/phoneVerification.wxss */
.main{
  height: 100%;
  padding: 0 40rpx;
  background-color: #fff;
}
.top-tips{
  height: 90rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 90rpx;
}
.input-box{
  width: 100%;
}
.input-box input{
  width: 100%;
  height: 100%;
  line-height: 90rpx;
}
.input-account,.input-code{
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.cell-left{
  flex: 1;
}
.code-btn{
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  background-color: #e3e3e3;
}
.submit-btn{
  margin-top:60rpx;
  width:667rpx;
  line-height:90rpx;
  text-align:center;
  background:#e3e3e3;
  color:#fff;
  font-size:30rpx;
}
.on{
  background-color: #ce5b61;
}