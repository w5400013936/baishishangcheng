/* pages/myOrderRate/myOrderRate.wxss */
view{
  box-sizing: border-box;
}
.panel{
  width: 100%;
  background-color: #fff;
  margin-top: 24rpx;
  box-sizing: border-box;
}
.panel-content{
  width: 100%;
  height: 196rpx;
  padding:25rpx 29rpx 24rpx 29rpx;
  border-top: 1rpx solid #ddd;
  box-sizing: border-box;
  position: relative;
}
.panel-content-img{
  width: 146rpx;
  height: 146rpx;
}
.panel-content-right{
  display: inline-block;
  margin-left: 20rpx;
  vertical-align: top;
  position: relative;
}
.panel-content-title{
  font-size: 33rpx;
  color: #000000;
  line-height: 33rpx; 
  text-overflow: ellipsis;
  width: 520rpx;
  white-space: nowrap;
  overflow: hidden;
}
.panel-content-subTitle{
  font-size: 21rpx;
  color: #999999;
  margin-top: 16rpx;
  margin-left: -4rpx;
  line-height: 21rpx;
}
.panel-content-price{
  margin-top: 58rpx;
  font-size:25rpx;
  color: #f23030;
  line-height: 18rpx;
}
.panel-content-num{
  position: absolute;
  right: 55rpx;
  bottom: 18rpx;
  font-size:21rpx;
}
.panel-bottom-rate{
  width: 100%;
  height: 84rpx;
  padding: 14rpx 29rpx;
  border-top: 1rpx solid #ddd;
}
.rate-btn{
  width: 143rpx;
  height: 57rpx;
  float: right;
  font-size: 25rpx;
  line-height: 57rpx;
  color: #666666;
  border: 1rpx solid #dddddd;
  border-radius: 7rpx;
  text-align: center;
}
.panel-comment{
  width: 100%;
  height: 213rpx;
  padding: 20rpx 29rpx 24rpx;
  border-top: 1rpx solid #ddd;
}
.panel-comment-text{
  width: 100%;
  height: 170rpx;
}
.panel-comment-ph{
  font-size: 25rpx;
  color: #999999;
}
.upload-btn{
  width: 160rpx;
  height: 160rpx;
}
.panel-anonymous{
  width: 100%;
  height: 84rpx;
  border-top: 1rpx solid #ddd;
  padding: 20rpx 29rpx;
}
.panel-anonymous-left{
  display: inline-block;
}
.panel-anonymous-left image{
  width: 42rpx;
  height: 42rpx;
}
.panel-anonymous-left .text-justify{
  height: 42rpx;
  line-height: 42rpx;
  font-size: 25rpx;
  color: #666666;
  display: inline-block;
   vertical-align: top; 
  margin-left: 26rpx;
}
.panel-anonymous-right{
  float: right;
  font-size: 21rpx;
  color: #999999;
  height: 42rpx;
  line-height: 42rpx;
  vertical-align: top;
}
.panel-star{
  width: 100%;
  height: 258rpx;
  padding: 27rpx 0 0 29rpx;
}
.panel-star-content{
  font-size: 25rpx;
  color: #333333;
  margin-bottom: 30rpx;
}
.panel-star-left{
  display: inline-block;
  height: 40rpx;
  vertical-align: bottom;
}
.panel-star-right{
  display: inline-block;
  margin-left: 55rpx;
}
.panel-star-right image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 31rpx;
}
.bottom-box{
  width: 100%;
  height: 98rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #c9151e;
  color: #fff;
  font-size: 33rpx;
  line-height: 98rpx;
  text-align: center;
}
